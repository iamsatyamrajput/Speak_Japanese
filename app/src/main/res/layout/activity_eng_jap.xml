<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"
        android:id="@+id/bg"
        android:alpha=".3" />

    <EditText
        android:id="@+id/enterEng"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:id="@+id/enterEngBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mic"
        android:scaleType="fitCenter"
        android:layout_below="@+id/enterEng"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/listenJap"
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/enterEngBtn"/>

    <ImageButton
        android:id="@+id/listenJapBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/listen"
        android:scaleType="fitCenter"
        android:layout_below="@+id/listenJap"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/listenJap"
        android:layout_marginTop="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer1"
            android:textColor="#000"
            android:fontFamily="@font/bebasneueregular"
            android:id="@+id/footer_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer2"
            android:textColor="#000"
            android:fontFamily="@font/bebasneuebold"
            android:layout_toEndOf="@+id/footer_1"/>

    </RelativeLayout>

</RelativeLayout>
